# 編碼切換
bind b encoding big5 utf8
bind u encoding utf8 utf8
defencoding utf8

bindkey "^[n" screen # F9 : 新增子視窗。(C-a c)
bindkey "^[m" kill   # F10 : 關閉當前視窗。 (C-a k)
bindkey "^[." next   #alt+> next
bindkey "^[," prev   #alt+< prev
