OS=`env uname -s`
if [[ $OS == "Linux" ]]; then
    alias l='env ls --color'
    alias ls='env ls -hl --color'
    alias ll='env ls -hlaF --color'
else
    alias l='ls -GF'
    alias ls='ls -hlGF'
    alias ll='ls -hlaGF'
fi
if [[ $OS == "Darwin" ]];then
    alias sd="cd /Volumes/SD/"
fi

