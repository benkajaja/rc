umask 022
setenv LC_ALL en_US.UTF-8
set nobeep
set autolist
set notify
set color

#make ls looks better in colors
#1. directory
#2. symbolic link
#3. socket
#4. pipe
#5. executable
#6. block special
#7. character special
#8. executable with setuid bit set
#9. executable with setgid bit set
#10.directory writable to others, with sticky bit
#11.directory writable to others, without sticky bit

#use -F to show file attribute
if ($OSTYPE == 'linux') then
	setenv LS_COLORS 'no=00:fi=00:di=01;36:ln=35;40:so=32;40:pi=33;40:ex=31;40:bd=34;46:cd=34;43:su=0;41:sg=0;46:tw=0;42:ow=0;43'
	alias ls 'ls -hlF --color'
	alias ll 'ls -hlaF --color'
else if ($OSTYPE == 'FreeBSD') then
	#for freebsd
	setenv CLICOLOR yes
	setenv LS_COLORS 'no=00:fi=00:di=01;36:ln=35;40:so=32;40:pi=33;40:ex=31;40:bd=34;46:cd=34;43:su=0;41:sg=0;46:tw=0;42:ow=0;43'
	setenv LSCOLORS Gxfxcxdxbxegedabagacad
	alias ls 'ls -hlF'
	alias ll 'ls -hlaF'
else
	#for mac
	alias sd  'cd /Volumes/SD/'
	setenv CLICOLOR 'no=00:fi=00:di=01;36:ln=35;40:pi=40;33:so=01;35:bd=40;33;01:cd=40;33;01:ex=01;32:'
	alias ls 'ls -hlF'
	alias ll 'ls -hlaF'
endif

#for macbook:replace built-in software
if(-e \/usr\/local\/bin\/vim) then
	alias vim '/usr/local/bin/vim'
	alias vimdiff '/usr/local/bin/vimdiff'
endif
if(-e \/usr\/local\/bin\/git) then
	alias git '/usr/local/bin/git'
endif

#tcsh use setenv as export in bash, remamber to escape :
#set for GOlang
if(-d \/usr\/local\/go\/bin) then
	setenv PATH $PATH\:/usr/local/go/bin
	setenv GOPATH "$HOME/go/"
endif

